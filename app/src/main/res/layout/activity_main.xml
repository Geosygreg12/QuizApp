<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newnum"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/topic"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/deepBlack" />


        </LinearLayout>

        <EditText
            android:id="@+id/newUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:hint="@string/hint"
            android:inputType="textCapWords"
            android:paddingBottom="8dp"
            android:textColor="#FAFAFA" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/imfefcsc28p"
            android:paddingBottom="4dp"
            android:text="@string/instructions"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deepBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/imfefcsc28p"
            android:paddingBottom="8dp"
            android:text="@string/instrution_body"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deepBlack"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4E4B4F" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/imfefcsc28p"
            android:paddingBottom="4dp"
            android:text="@string/question"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deepBlack" />

        <LinearLayout
            android:id="@+id/questionOneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/deepBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="cursive"
                android:paddingBottom="4dp"
                android:text="@string/question_one"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/deepBlack" />

        </LinearLayout>

        <Spinner
            android:id="@+id/questionOneSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingLeft="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4E4B4F" />

        <LinearLayout
            android:id="@+id/questionTwoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/deepBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="cursive"
                android:paddingBottom="4dp"
                android:text="@string/question_two"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/deepBlack" />


        </LinearLayout>

        <Spinner
            android:id="@+id/questionTwoSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingLeft="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4E4B4F" />

        <LinearLayout
            android:id="@+id/questionThreeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/deepBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="cursive"
                android:paddingBottom="4dp"
                android:text="@string/question_three"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/deepBlack" />


        </LinearLayout>

        <Spinner
            android:id="@+id/questionThreeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:paddingLeft="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4E4B4F" />

        <LinearLayout
            android:id="@+id/questionFourLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/deepBlack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:fontFamily="cursive"
                android:paddingBottom="4dp"
                android:text="@string/question_four"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/deepBlack" />


        </LinearLayout>

        <Spinner
            android:id="@+id/questionFourSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4E4B4F" />

        <LinearLayout
            style="?android:buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submitButton"
                style="?android:buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitButton"
                android:text="@string/submit"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/start_Over"
                style="?android:buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startOver"
                android:text="@string/start_over"
                android:textAllCaps="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/answerStatement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:fontFamily="cursive"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FAFAFA" />


    </LinearLayout>


</ScrollView>